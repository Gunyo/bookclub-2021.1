<h1>List Books</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genres</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= link_to book.author.full_name, author_path(book.author) %></td>
            <td><%= book.genres_to_csv %></td>
        </tr>
    <% end %>
</table>